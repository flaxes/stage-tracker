        "lib": ["es2022", "DOM"],
        "resolveJsonModule": true,
        "checkJs": true,
        "strictNullChecks": true,
        "skipLibCheck": true,
        "outDir": "./build"
    },
    "include": ["../types/**/*", "./*.js"],
    "exclude": ["build"]
}